{% block styles %}
  <link rel="stylesheet" href="{{ theme_uri }}/assets/about-me/style.css" />
{% endblock %}

{% block content %}
  {% include "sections/about-me/about-section.twig" %}
  {% include "sections/about-me/story-section.twig" %}
  {% include "sections/shared/partners-section.twig" %}
  {% include "sections/about-me/contact-section.twig" %}
